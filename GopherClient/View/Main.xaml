<Window x:Class="GopherClient.View.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GopherClient.View"
        xmlns:vm="clr-namespace:GopherClient.ViewModel"
        mc:Ignorable="d"
        Title="gopherspace" Height="450" Width="800" Background="Black"
		>
	<Window.DataContext>
		<vm:MainViewModel/>
	</Window.DataContext>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
			<RowDefinition Height="25"/>
		</Grid.RowDefinitions>

		<ToolBar Grid.Row="1">
			<Button Content="Back" Command="{Binding BackCommand}"/>
			<Button Content="Forward" Command="{Binding ForwardCommand}" />
		</ToolBar>

		<StatusBar   Grid.Row="3" Background="Gray">
			<StatusBarItem>
				<TextBlock Text="{Binding Status}" FontSize="12" FontWeight="Bold"/>
			</StatusBarItem>
		</StatusBar>
		<TextBox Text="{Binding Location}" TextWrapping="NoWrap" AcceptsReturn="False" AcceptsTab="False" VerticalAlignment="Top"/>

		<FlowDocumentScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Visible" Document="{Binding Doc}" Foreground="White" FontFamily="Consolas" >
			
		</FlowDocumentScrollViewer>
	</Grid>
</Window>
