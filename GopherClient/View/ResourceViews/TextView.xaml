<UserControl x:Class="GopherClient.View.ResourceViews.TextView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GopherClient.View.ResourceViews"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" 
      Background="Black">
	<TextBox IsReadOnly="True" Text="{Binding Text}" VerticalScrollBarVisibility="Visible" FontFamily="Consolas" BorderThickness="0" Background="LightGray" Foreground="Black" FontWeight="SemiBold"/>
</UserControl>
