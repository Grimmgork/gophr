<UserControl x:Class="GopherClient.View.ResourceViews.ErrorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GopherClient.View.ResourceViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Black">
	<Border>
		<StackPanel>
			<TextBlock Text="Error:" Foreground="Red" Margin="15" FontSize="18"/>
			<TextBlock Text="{Binding Message}" Foreground="White"/>
		</StackPanel>
	</Border>
</UserControl>
